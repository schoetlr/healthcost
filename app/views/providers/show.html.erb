<div class="row title-row">
  

  <div class="col-md-12 header-col">
    <h1 id="p-name"><strong><%= @provider.name %></strong></h1>
  </div>

  <div class="col-md-12 header-col">
    <h4><%= @provider.address %></h4>
  </div>

</div>

<br><br><br>

<div class="row">
<table class="pro-show-table col-md-12">
  <thead>
    <tr>
      <th>Procedure Name</th>
      
      <th>Insurance Price</th>
      <th>Cash Price</th>
      <th>Price Description</th>
      
    </tr>
  </thead>

  <tbody>
    <% @provider.procedures.each do |procedure| %>
      <tr>
        <td><%= procedure.name %></td>
        <td><%= procedure.insurance_price %></td>
        <td><%= procedure.cash_price %></td>
        <td><%= procedure.price_description %></td>
      
        <td><%= link_to 'Show', procedure %></td>
        <% if provider_signed_in? %>
        <td><%= link_to 'Edit', edit_procedure_path(procedure) %></td>
        <td><%= link_to 'Destroy', procedure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br><br><br>

<div class="row">

  <div class="col-md-12 col-md-push-2">
    <p id="pricing-help">If you spot any pricing data you believe to be incorrect; please notify us at healhcostconnect@gmail.com</p>
  </div>

</div>